{
    "name": "clankie-api",
    "version": "1.0.0",
    "description": "Clankie API - AI-powered business communication platform",
    "main": "src/app.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "migrate": "npx sequelize-cli db:migrate",
        "migrate:undo": "npx sequelize-cli db:migrate:undo",
        "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate",
        "seed": "npx sequelize-cli db:seed:all",
        "seed:undo": "npx sequelize-cli db:seed:undo:all",
        "test": "NODE_ENV=test jest",
        "test:watch": "NODE_ENV=test jest --watch",
        "test:coverage": "NODE_ENV=test jest --coverage",
        "test:ai": "node test-ai-integration.js",
        "test:ci": "./scripts/test-ci.sh",
        "migrate:test": "NODE_ENV=test npx sequelize-cli db:migrate",
        "migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
        "migrate:undo:test": "NODE_ENV=test npx sequelize-cli db:migrate:undo:all"
    },
    "keywords": [
        "api",
        "express",
        "sequelize",
        "ai",
        "business",
        "communication"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "firebase-admin": "^13.5.0",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "openai": "^4.20.1",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.35.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.8",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "sequelize-cli": "^6.6.2",
        "sqlite3": "^5.1.7",
        "supertest": "^6.3.3"
    }
}
